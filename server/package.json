{
  "name": "tblog-server",
  "version": "1.0.0",
  "description": "Server implementation for tblog",
  "main": "index.js",
  "author": "darkamenosa",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev:start",
    "dev:start": "nodemon --ignore build --exec babel-node src",
    "test": "eslint src && flow && jest --coverage",
    "test:watch": "jest --watch",
    "prod:build": "rimraf build && babel src -d build --ignore __test__,.test.js",
    "prod:start": "cross-env NODE_ENV=production pm2 start build --name tblog-server && pm2 logs",
    "prod:stop": "pm2 delete tblog-server",
    "prepush": "npm run test && npm run prod:build"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.1",
    "babel-preset-env": "^1.4.0",
    "babel-preset-flow": "^6.23.0",
    "cross-env": "^5.0.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2 || ^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.46.0",
    "husky": "^0.13.3",
    "jest": "^20.0.1",
    "nodemon": "^1.11.0",
    "pm2": "^2.4.6",
    "rimraf": "^2.6.1"
  },
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.15.2"
  }
}
